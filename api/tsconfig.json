{
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "module": "CommonJS",
    "noImplicitAny": false,
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "types": ["node"],
		"noEmitOnError": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/typescript/lib/lib.dom.d.ts",
    "src/express-status-monitor/src/public/*",
    "src/express-status-monitor/examples/*",
    "src/utils/test-setup-per-file.js",
    "src/utils/test-setup.js",
    "src/utils/test-utils.js",
    "**/*.test.js",
    "**/*.test.ts", 
    "**/*.spec.js",
    "**/*.spec.ts", 
    "dist/*"]
}
