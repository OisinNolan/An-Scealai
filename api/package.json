    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "bson": "^4.4.0",
    "chai-arrays": "^2.2.0",
    "connect-multiparty": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.17.0",
    "formidable": "^1.2.1",
    "generate-password": "^1.6.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "logger": "^0.0.1",
    "mongo-unit": "^2.0.1",
    "mongodb": "^3.6.9",
    "mongoose": "^6.3.9",
    "multer": "1.4.5-lts.1",
    "node": "^18.4.0",
    "node-html-parser": "^1.4.9",
    "node-pandoc-promise": "^0.0.6",
    "nodemailer": "^6.6.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
