{
  "name": "api",
  "version": "1.0.16",
  "description": "The backend API for An Scéalaí.",
  "main": "server.js",
  "scripts": {
    "build": "tsc",
    "start": "nodemon src/server.ts",
    "start:e2e": "IN_MEMORY_DB=1 NO_EMAILS=1 FUDGE=1 ts-node src/server.ts",
    "start:qa": "DB=qa PORT=4002 ts-node src/server.ts",
    "test": "jest --forceExit --rootDir src",
    "test:silent": "jest --forceExit --rootDir src --silent",
    "start:prod": "DB=an-scealai PORT=4000 ts-node --transpile-only src/server.ts"
  },
  "jest": {
    "preset": "ts-jest",
    "setupFiles": [
      "<rootDir>/util/testSetup.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/util/testSetupPerFile.js"
    ],
    "forceExit": true,
    "collectCoverage": false,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "mjs",
      "ts"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/speech": "^4.8.0",
    "@typegoose/typegoose": "^9.9.0",
