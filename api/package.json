    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "express": "^4.17.0",
    "express-jwt": "^5.3.1",
    "formidable": "^1.2.1",
    "generate-password": "^1.6.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "logger": "^0.0.1",
    "mongo-unit": "^2.0.1",
    "mongodb": "^3.6.9",
    "mongoose": "^5.12.13",
    "multer": "^1.4.2",
    "node-html-parser": "^1.4.9",
    "nodemailer": "^6.6.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "read": "^1.0.7",
    "request": "^2.88.2",
    "stackify": "^1.0.17",
    "stackify-logger": "^3.0.11",
    "stream": "0.0.2",
    "util": "^0.12.1",
    "uuid": "^3.3.2",
