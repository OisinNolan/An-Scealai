{
  "name": "api",
  "version": "1.1.3",
  "description": "The backend API for An Scéalaí.",
  "main": "server.ts",
  "scripts": {
    "test": "jest",
    "start": "nodemon -x ts-node server.ts",
    "start:nocheck": "nodemon -x ts-node --transpile-only server.ts",
    "start:prod": "DB=an-scealai PORT=40000 NODE_ENV=prod ts-node --transpile-only server.ts",
    "start:qa": "DB_HOSTNAME=localhost:27018/ DB=qa PORT=4002 ts-node --transpile-only server.ts"
  },
  "jest": {
    "testTimeout": 10000,
    "modulePathIgnorePatterns": [
      "<rootDir>/express-status-monitor"
    ],
    "preset": "ts-jest/presets/default",
    "globals": {
      "ts-jest": {
        "isolatedModules": true,
        "diagnostics": false,
        "tsconfig": "tsconfig.json"
      }
    },
    "setupFiles": [
      "<rootDir>/test-utils/test-setup.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test-utils/test-setup-per-file.ts"
    ],
    "forceExit": true,
    "collectCoverage": false
  },
  "keywords": [],
