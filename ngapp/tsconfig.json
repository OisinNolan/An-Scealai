{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "baseUrl": "./src",
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "../out-tsc/app",
    "strictBindCallApply": true,
    "paths": {
      "node_modules": [
        "../node_modules"
      ]
    },
    "types": [
      "jquery",
      "node"
    ],
    "useDefineForClassFields": false
  },
  "resolveJsonModule": true,
  "files": [
    "main.ts",
    "polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts",
  ]
}
