{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "baseUrl" : "./src",
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "../out-tsc/app",
    "paths": {
      "node_modules": ["../node_modules"]
    },
    "types": [
      "jquery",
      "node"
    ]
  },
  "resolveJsonModule": true,
  "files": [
    "main.ts",
    "polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts",
  ]
}
