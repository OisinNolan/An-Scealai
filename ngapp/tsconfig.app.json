{
  "compileOnSave": false,
  "exclude": [
    "**/*spec.ts",
    "e2e/*",
    "src/test.ts",
    "src/environments/environment.prod.ts",
    "**/*.qa.ts"
  ],
  "compilerOptions": {
    "paths": {
      "@api/*": ["../../api/*"],
      "@service/*": ["./app/services/*"]
    },
    "baseUrl": "./src",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true, 
    "target": "es2020",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "es2019",
      "dom"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}
