{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
	"cli": {
		"analytics": "28879dc6-bc91-478d-8f49-0d9a32a36fba"
	},
	"version": 1,
	"newProjectRoot": "projects",
	"projects": {
		"an-scealai": {
      "projectType": "application",
      "sourceRoot": "src",
      "prefix": "app",
			"root": "",
			"schematics": {
				"@schematics/angular:component": {
					"style": "scss"
				}
			},
			"architect": {
        "build": {
          "defaultConfiguration": "production",
          "builder": "@angular-devkit/build-angular:browser",
          "options": {

            "aot": true,
            "outputPath": "dist",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.app.json",
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ],
            "styles": [
              "node_modules/bootstrap/dist/css/bootstrap.min.css",
              "./node_modules/@angular/material/prebuilt-themes/indigo-pink.css",
              "node_modules/angular-text-input-highlight/text-input-highlight.css",
							"src/styles.scss",
              "node_modules/quill/dist/quill.core.css",
              "node_modules/quill/dist/quill.bubble.css",
              "node_modules/quill/dist/quill.snow.css"
            ],
            "scripts": [
              "./node_modules/bootstrap/dist/js/bootstrap.bundle.min.js",
              {
                "input": "node_modules/document-register-element/build/document-register-element.js"
              }
            ]
          },
					"configurations": {
						"production": {
              "optimization": {
                "scripts": true,
                "styles": {
                  "minify": true,
                  "inlineCritical": false
                }
              },
              "budgets": [
                { "type": "initial",            "maximumWarning": "3mb",  "maximumError": "3.55mb" },
                { "type": "anyComponentStyle",  "maximumWarning": "5kb",    "maximumError": "9kb" }
              ],
              "fileReplacements": [
                { "replace": "src/environments/environment.ts",   "with": "src/environments/environment.prod.ts" },
                { "replace": "src/abairconfig.ts",                "with": "src/abairconfig.prod.ts" }
              ],
							"outputHashing": "all"
						},
						"dev": {
							"buildOptimizer": false,
							"optimization": false,
							"vendorChunk": true,
							"extractLicenses": false,
							"sourceMap": true,
							"namedChunks": true
						},
						"qa": {
							"fileReplacements": [
								{ "replace": "src/environments/environment.ts", "with": "src/environments/environment.prod.ts" },
								{ "replace": "src/abairconfig.ts",              "with": "src/abairconfig.qa.ts" }
							]
            }
					}
				},
				"serve": {
					"defaultConfiguration": "dev",
					"builder": "@angular-devkit/build-angular:dev-server",
					"configurations": {
						"production": {
							"browserTarget": "an-scealai:build:production"
						},
						"dev": {
							"browserTarget": "an-scealai:build:dev"
						}
					}
				},
				"extract-i18n": {
					"builder": "@angular-devkit/build-angular:extract-i18n",
					"options": {
						"browserTarget": "an-scealai:build"
					}
				},
				"test": {
					"builder": "@angular-devkit/build-angular:karma",
          "configurations": {
            "ci": {
              "fileReplacements": [{
                "replace": "src/environments/environment.ts",
                "with": "src/environments/environment.ci.ts"
              }]
            }
          },
					"options": {
						"main": "src/test.ts",
						"polyfills": "src/polyfills.ts",
						"tsConfig": "tsconfig.spec.json",
						"karmaConfig": "karma.conf.ts",
						"assets": [
							"src/favicon.ico",
							"src/assets"
						],
						"styles": [
							"src/styles.scss",
              "node_modules/bootstrap/dist/css/bootstrap.min.css",
              "./node_modules/@angular/material/prebuilt-themes/indigo-pink.css",
              "node_modules/angular-text-input-highlight/text-input-highlight.css",
              "node_modules/quill/dist/quill.core.css",
              "node_modules/quill/dist/quill.bubble.css",
              "node_modules/quill/dist/quill.snow.css"
						],
						"scripts": []
					}
				},
        "cypress-run": {
          "builder": "@cypress/schematic:cypress",
          "options": {
            "devServerTarget": "an-scealai:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "an-scealai:serve:production"
            }
          }
        },
        "cypress-open": {
          "builder": "@cypress/schematic:cypress",
          "options": {
            "watch": true,
            "headless": false
          }
        },
        "e2e": {
          "builder": "@cypress/schematic:cypress",
          "options": {
            "devServerTarget": "an-scealai:serve",
            "watch": false,
            "headless": true
          },
          "configurations": {
            "production": {
              "devServerTarget": "an-scealai:serve:production"
            }
          }
        }
			}
		}
	}
}
