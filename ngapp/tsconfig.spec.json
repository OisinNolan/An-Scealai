{
  "compilerOptions": {
    "target": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "../out-tsc/spec",
    "sourceMap": true,
    "strictBindCallApply": true,
    "types": [
      "jasmine",
      "node",
      "jquery"
